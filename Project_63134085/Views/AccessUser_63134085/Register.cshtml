    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="../LayoutAdmin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../LayoutAdmin/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            @using (Html.BeginForm("Register", "AccessUser_63134085", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.LabelFor(m => m.TenKhachHang)
                                    @Html.TextBoxFor(m => m.TenKhachHang, "", new { @class = "form-control", @placeholder = "Tên khách hàng" })
                                    @Html.ValidationMessageFor(m => m.TenKhachHang, "", new { @class = "badge badge-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.NgaySinh)
                                    @Html.TextBoxFor(m => m.NgaySinh, "", new { @class = "form-control", @placeholder = "Ngày sinh" })
                                    @Html.ValidationMessageFor(m => m.NgaySinh, "", new { @class = "badge badge-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.SoDienThoai)
                                    @Html.TextBoxFor(m => m.SoDienThoai, "", new { @class = "form-control", @placeholder = "SĐT" })
                                    @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "badge badge-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.DiaChi)
                                    @Html.TextBoxFor(m => m.DiaChi, "", new { @class = "form-control", @placeholder = "Địa chỉ" })
                                    @Html.ValidationMessageFor(m => m.DiaChi, "", new { @class = "badge badge-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.username)
                                    @Html.TextBoxFor(m => m.username, "", new { @class = "form-control", @placeholder = "Tài khoản" })
                                    @Html.ValidationMessageFor(m => m.username, "", new { @class = "badge badge-danger" })
                                    @if (ViewBag.error != null)
                                    {
                                        <span class="badge badge-danger">@ViewBag.error</span>
                                    }
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.password)
                                    @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                                    @Html.ValidationMessageFor(m => m.password, "", new { @class = "badge badge-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.confirmpassword)
                                    @Html.PasswordFor(m => m.confirmpassword, new { @class = "form-control", @placeholder = "Nhập lại mật khẩu" })
                                    @Html.ValidationMessageFor(m => m.confirmpassword, "", new { @class = "badge badge-danger" })
                                </div>

                                <div class="mt-3">
                                    <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">ĐĂNG KÝ</button>
                                </div>

                                <div class="text-center mt-4 font-weight-light">
                                    Bạn đã có tài khoản?<a href="/accessuser_63134085/login" class="text-primary">Đăng nhập</a>
                                </div>
                                <div class="text-center mt-4 font-weight-light"> Về trang chủ <a href="/tdanhmucsps_63134085/index" class="text-primary">tại đây</a></div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../LayoutAdmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../LayoutAdmin/assets/js/off-canvas.js"></script>
    <script src="../LayoutAdmin/assets/js/hoverable-collapse.js"></script>
    <script src="../LayoutAdmin/assets/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>