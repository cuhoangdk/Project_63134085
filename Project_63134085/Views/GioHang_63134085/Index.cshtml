@model Project_63134085.Models.tGioHang

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Sản phẩm</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Tổng</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.dsSP)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="@Url.Content("../Images/"+item.tDanhMucSP.AnhDaiDien)" style="max-width:100px" alt="">
                                        <h5>@item.tDanhMucSP.TenSP</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        @string.Format("{0:#,0}", item.tDanhMucSP.GiaNhoNhat)đ
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <input type="number" value="@item.SoLuong">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="shoping__cart__total">
                                        @string.Format("{0:#,0}", item.tDanhMucSP.GiaNhoNhat * item.SoLuong)
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <form action="/GioHang_63134085/XoaSanPham" method="post">
                                            <input type="hidden" name="idSP" value="@item.tDanhMucSP.MaSP" />
                                            <button class="mt-4">Xóa</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <form action="/thanhtoan_63134085/thanhtoan">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a href="../tDanhMucSPs_63134085/index" class="primary-btn cart-btn">Tiếp tục mua hàng</a>
                        <a href="index" class="primary-btn cart-btn cart-btn-right">
                            <span class="icon_loading"></span>
                            Cập nhật giỏ hảng
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                </div>
                <div class="col-lg-6">
                    <div class="shoping__checkout">
                        <h5>Tổng tiền giỏ hàng</h5>
                        <ul>
                            <li>Tổng <span>@string.Format("{0:#,0}", Model.TongTienHD)đ</span></li>
                        </ul>
                        <button class="primary-btn" @(Model.TongTienHD == 0 ? "disable" : null)>THANH TOÁN</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

