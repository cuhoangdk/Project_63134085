@model PagedList.IPagedList<Project_63134085.Models.tDanhMucSP>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int @i = 0;
    string @cls = "table-sucess";
}
<h2>Danh mục sản phẩm</h2>
<style type="text/css">
    .product__pagination,
    .blog__pagination {
        padding-top: 10px;
    }

        .product__pagination a,
        .blog__pagination a {
            display: inline-block;
            width: 30px;
            height: 30px;
            border: 1px solid #b2b2b2;
            font-size: 14px;
            color: #b2b2b2;
            font-weight: 700;
            line-height: 28px;
            text-align: center;
            margin-right: 16px;
            -webkit-transition: all, 0.3s;
            -moz-transition: all, 0.3s;
            -o-transition: all, 0.3s;
            transition: all, 0.3s;
        }

            .product__pagination a:hover,
            .blog__pagination a:hover {
                background: #7fad39;
                border-color: #7fad39;
                color: #ffffff;
            }

            .product__pagination a:last-child,
            .blog__pagination a:last-child {
                margin-right: 0;
            }
</style>
<table class="table bg-white py-4 px-4">
    <tr class="table-warning text-center">
        <th>STT</th>
        <th>
            @Html.DisplayNameFor(model => model[0].TenSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].CanNang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].DoNoi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].ThoiGianBaoHanh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].GiaNhoNhat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].GiaLonNhat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].SoLuong)
        </th>
        <th>Chức năng</th>
    </tr>
    @foreach (var item in Model)
    {
        i = i + 1;
        cls = "table-sucess";
        if (i % 2 == 0)
        {
            cls = "table-primary";
        }
        <tr class="@cls">
            <td class="text-center">@i</td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.CanNang)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.DoNoi)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.ThoiGianBaoHanh)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.GiaNhoNhat)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.GiaLonNhat)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.MaSP.Trim()})" class="btn btn-sm btn-rounded text-dark btn-gradient-light">
                    Chỉnh sửa
                </a>
                <a href="@Url.Action("Delete", new { id = item.MaSP.Trim() })" class="btn btn-sm btn-rounded text-dark btn-gradient-light">
                    Xoá
                </a>
            </td>
        </tr>
    }

</table>
<div class="product__pagination">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>